#!/bin/bash

if [[ $1 = breaking* ]]; then
  ((MAJOR_VERSION=MAJOR_VERSION+1))
  MINOR_VERSION=0
  PATCH_VERSION=0
elif [[ $1 = feature* ]]; then
  ((MINOR_VERSION=MINOR_VERSION+1))
  PATCH_VERSION=0
else
  ((PATCH_VERSION=PATCH_VERSION+1))
fi

export VERSION="${MAJOR_VERSION}.${MINOR_VERSION}.${PATCH_VERSION}"
